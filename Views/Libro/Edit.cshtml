@model ProyectoFinalDesarrolloWeb.Models.Libro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibroID" class="control-label"></label>
                <input asp-for="LibroID" class="form-control" required/>
                <span asp-validation-for="LibroID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" required />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" required />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <label>Seleccione un Tipo de Genero</label>
                <select asp-for="idGenero" class="form-control" style="text-align:center">
                <option value="">Seleccione un tipo</option>
                @foreach (var tipo in ViewBag.GenerosDeLibros)
                {
                    <option value="@tipo.idGenero">@tipo.desGenero</option>
                }
            </select>


            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" required />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" required />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
