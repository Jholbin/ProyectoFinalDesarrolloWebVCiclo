@model ProyectoFinalDesarrolloWeb.Models.Libro

@{
    ViewBag.Title = "Libro";
   }
<h1 style="text-align:center">Registro de Libro</h1>
<div>
    <form asp-controller="Libro" asp-action="Registro">
        <label>Titulo</label>
        <input asp-for="Titulo" class="form-control" style="text-align:center" required />
        <span asp-validation-for="Titulo" class="text-danger"></span>

        <label>Autor</label>
        <input asp-for="Autor" class="form-control" style="text-align:center" required />
        <span asp-validation-for="Autor" class="text-danger"></span>

        <label>Precio</label>
        <input asp-for="Precio" class="form-control" style="text-align:center" required />
        <span asp-validation-for="Precio" class="text-danger"></span>

        <label>Stock</label>
        <input asp-for="Stock" class="form-control" style="text-align:center" required />
        <span asp-validation-for="Stock" class="text-danger"></span>

        <label>Seleccione un Tipo de Genero</label>
        <select asp-for="idGenero" class="form-control" style="text-align:center">
            <option value="">Seleccione un tipo</option>
            @foreach (var tipo in ViewBag.GenerosDeLibros)
            {
                <option value="@tipo.idGenero">@tipo.desGenero</option>
            }
        </select>

     </br>
    <p style="text-align:center">
            <input type="submit" value="Registar" class="btn btn-warning" />
    </p>

    </form>
</div>